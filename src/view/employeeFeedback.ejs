
  <div class="background-radial-gradient overflow-hidden" style="height: 100vh">
    <div
      class="d-flex flex-column mb-3 justify-content-center align-items-center"
    >
    <div class="p-2 mt-4" style="width: 100%; max-width: 1200px">
        <h4 style="color: aliceblue">
          Received feedback
          <i class="fa-regular fa-message fa-sm" style="color: #ffffff"></i>
        </h4>
        <% if (feedBackDetails) { %>
          <% const feedbackElements = [].concat(feedBackDetails); %>
          <div class="p-2" style="width: 100%; max-width: 400px">
            <div class="accordion accordion-flush" id="accordionFlushExample">
              <% for (const recipient of feedbackElements) { %>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseThree-<%= recipient._id %>"
                            aria-expanded="false"
                            aria-controls="flush-collapseThree-<%= recipient._id %>">
                      <%= recipient.reviewerEmailId %>
                    </button>
                  </h2>
                  <div id="flush-collapseThree-<%= recipient._id %>"
                       class="accordion-collapse collapse"
                       data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                      <div>
                        <span class="fw-medium"><i class="fa-solid fa-id-badge"></i> Reviewer:</span>
                        <%= recipient.reviewerFirstName %> <%= recipient.reviewerLastName %>
                      </div>
                      <br>
                      <div>
                        <span class="fw-medium"><i class="fa-solid fa-star" style="color: #FFD43B;"></i> Rating:</span>
                        <%= recipient.rating %>
                      </div>
                      <br>
                      <div>
                        <span class="fw-medium"><i class="fa-regular fa-comment-dots"></i> Comment:</span>
                        <%= recipient.comment %>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } else { %>
            <p style="color: azure">No feedback available </p>

        <% } %>
      </div>
      
    </div>
  </div>
  